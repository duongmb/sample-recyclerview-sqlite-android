<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_info"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/shape"
    android:padding="5dp"
    >

    <ImageView
        android:id="@+id/image_view_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:foregroundGravity="center"
        android:src="@mipmap/ic_launcher_round"
        />

    <RelativeLayout
        android:id="@+id/layout_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/image_view_avatar"
        >

        <ImageView
            android:id="@+id/image_view_edit_button"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_alignParentLeft="true"
            android:src="@drawable/edit"
            />

        <ImageView
            android:id="@+id/image_view_delete_button"
            android:layout_width="@android:dimen/app_icon_size"
            android:layout_height="@android:dimen/app_icon_size"
            android:layout_toRightOf="@id/image_view_edit_button"
            android:src="@drawable/delete"
            />

        <TextView
            android:id="@+id/text_view_id_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/image_view_delete_button"
            android:padding="2dp"
            android:text="Default"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/text_view_tel_mail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_view_id_name"
            android:layout_toRightOf="@+id/image_view_delete_button"
            android:text="Default"
            android:textSize="15sp"
            android:textStyle="italic"
            />

    </RelativeLayout>

</RelativeLayout>
